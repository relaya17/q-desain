{
    "name": "iq-design2",
    "version": "1.0.0",
    "private": true,
    "description": "אתר אדריכלות יוקרה באילת - מונורפו",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"pnpm --filter client dev\" \"pnpm --filter server dev\"",
        "dev:client": "pnpm --filter client dev",
        "dev:server": "pnpm --filter server dev",
        "build": "pnpm --filter client build",
        "build:all": "pnpm -r run build",
        "build:client": "pnpm --filter client build",
        "build:server": "pnpm --filter server build",
        "start": "concurrently \"pnpm --filter client preview\" \"pnpm --filter server start\"",
        "clean": "pnpm -r run clean",
        "lint": "pnpm -r run lint",
        "type-check": "pnpm -r run type-check"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "license": "ISC"
}